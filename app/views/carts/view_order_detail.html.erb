<% @view_order.product_carts.each do |product_cart| %>
	<% product = product_cart.product %>
	<div class="card rounded-3 mb-4 mx-5 ">
	    <div class="card-body p-4">
	      <div class="row d-flex justify-content-between align-items-center">
	        <div class="col-md-2 col-lg-2 col-xl-2 text-center">
	        	<% if product.cover.present? %>
	        		<%= link_to (image_tag product.cover, :size => '195x160'), product_path(id: product.id) %>
	        	<% end %>
	        <p class="lead fw-normal mb-2 text-center"><%= product.name %></p>
	        </div>
	        <div class="col-md-3 col-lg-3 col-xl-3">
	          <p class="lead fw-normal ms-5"><%= product_cart.unit_price %></p>
	        </div>
	        <div class="col-md-3 col-lg-3 col-xl-3">
	          <p class="lead fw-normal ms-5"><%= product_cart.quantity %></p>
	        </div>      
	        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
	          <h5 class="mb-0"><%= product_cart.total_price %></h5>
	        </div>
	      </div>
	    </div>
	  </div>
<% end %>
<div class="card mb-4 mx-5">
  <div class="card-header py-3">
    <h5 class="mb-0">Summary</h5>
  </div>
  <div class="card-body">
    <ul class="list-group list-group-flush">
      <li
        class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
        subtotal
        <span><%= @view_order.subtotal %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center px-0">
        Shipping Charge
        <span><%= @view_order.shipping_cost %></span>
      </li>
      <li
        class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
        <div>
          <strong>Total amount</strong>
          <strong>
            <p class="mb-0">(includin charges)</p>
          </strong>
        </div>
          <span><strong><%= @view_order.total %></strong></span>
      </li>
    </ul>
  </div>
</div>

