<%= form_with url: update_profile_path do |form| %>	
	<div class="container">
	<div class="row gutters">
	<div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
	<div class="card" style="width: 20rem;">
		<div class="card-body">
			<div class="account-settings">
				<div class="user-profile">
					<div class="user-avatar text-center mb-2">
						<% if @profile.image.present? %>
              <%= image_tag @profile.image, :size => '136x150' %>
            <% else %>
             	<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
            	class="rounded-circle img-fluid" style="width: 150px;">
            <% end %>
  					<%= form.file_field :image %>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>
	<div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
	<div class="card h-100">
		<div class="card-body">
			<div class="row gutters">
				<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
					<h6 class="mb-2 text-primary">Personal Details</h6>
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<div class="form-group">
						<%= form.label :full_name %>
            <%= form.text_field :name, class: "form-control", placeholder: "Enter full name", value: @profile.name %>
					</div>
				</div>
				<!-- <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<div class="form-group">
						<%#= form.label :email %>
            <%#= form.text_field :Email, class: "form-control", placeholder: "Email" %>
					</div>
				</div> -->
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<div class="form-group">
						<%= form.label :phone %>
            <%= form.text_field :contact_no, class: "form-control", placeholder: "Enter contact details", value: @profile.contact_no %>
					</div>
				</div>
			</div>
			<div class="row gutters">
				<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
					<h6 class="mt-3 mb-2 text-primary">Address</h6>
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<div class="form-group">
						<%= form.label :street %>
            <%= form.text_field :address, class: "form-control", placeholder: "Enter Street", value: @profile.address %>
					</div>
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<div class="form-group">
						<%= form.label :city %>
            <%= form.text_field :city, class: "form-control", placeholder: "Enter City", value: @profile.city %>
					</div>
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<div class="form-group">
						<%= form.label :state %>
            <%= form.text_field :state, class: "form-control", placeholder: "Enter State", value: @profile.state %>
					</div>
				</div>
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
					<div class="form-group">
						<%= form.label :Pin_code %>
            <%= form.text_field :pincode, class: "form-control", placeholder: "Enter pin code", value: @profile.pincode %>
					</div>
				</div>
			</div>
			<%= form.button :submit, class: "btn btn-primary" %>
		</div>
	</div>
	</div>
	</div>
	</div>
<% end %>