<% if @wishlist.present? %>
  <% @wishlist.wishlist_items.each do |wishlist_item| %>
    <% product = wishlist_item.product %>
    <div class="card rounded-3 mb-4 mx-5 ">
      <div class="card-body p-4">
        <div class="row d-flex justify-content-between align-items-center">
          <div class="col-md-2 col-lg-2 col-xl-2 text-center">
            <% if product.cover.present? %>
          <%= link_to (image_tag product.cover, :size => '195x160'), product_path(id: product.id) %>
          <% end %>
          </div>
          <div class="col-md-3 col-lg-3 col-xl-2">
            <p class="lead fw-normal ms-5"><%= product.name %></p>
          </div>      
          <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
            <h5 class="mb-0"><%= product.price %>Rs</h5>
          </div>
          <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
            <% if product.stock > 0 %>
              <h5 class="mb-0">in stock</h5>
            <% else %>
              <h5 class="mb-0">out of stock</h5>
            <% end %>  
          </div>
          <div class="col-md-1 col-lg-1 col-xl-1 text-end">
            <%= link_to wishlist_path(id: @wishlist.id, product_id: product.id), data: {turbo_method: :delete} do %>
              <i class="fas bi-trash fa-lg"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
<div class="card text-center">
  <h1> wishlist is empty </h1>
  <i class="bi bi-hand-thumbs-down" style="font-size:120px;"></i>
</div>
<% end %>
